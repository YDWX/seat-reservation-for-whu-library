{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "logLevelFilter",
      "level": "INFO",
      "appender": {
        "type": "file",
        "filename": "./logs/default.log"
      }
    },
    {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "./logs/error.log"
      }
    }
  ]
}